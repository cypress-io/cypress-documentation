{
  "name": "cypress-documentation",
  "version": "2.0.0",
  "private": true,
  "repository": {
    "type": "git",
    "url": "git+https://github.com/cypress-io/docs.git"
  },
  "license": "MIT",
  "scripts": {
    "build": "nuxt generate",
    "copy": "bash ./scripts/clone-current-docs.sh",
    "start": "cross-env NODE_ENV=development nuxt",
    "start:ci": "yarn build && cd dist/ && npx http-server . --port 3000",
    "lint:js": "eslint --ext .js,.vue --ignore-path .gitignore .",
    "lint:style": "stylelint **/*.{vue,css} --ignore-path .gitignore",
    "lint": "yarn lint:js && yarn lint:style",
    "test": "./node_modules/.bin/cypress open",
    "transform": "node scripts/transform.js",
    "make-empty-commit": "node node_modules/make-empty-github-commit/bin/empty.js --repo cypress-io/docs",
    "postinstall": "husky install"
  },
  "lint-staged": {
    "*.{js,vue}": [
      "eslint --cache --fix",
      "git add"
    ],
    "*.{css,vue}": [
      "stylelint",
      "git add"
    ],
    "*.css": [
      "stylelint --fix",
      "git add"
    ],
    "*.md": [
      "prettier --write",
      "git add"
    ] 
  },
  "dependencies": {
    "@docsearch/css": "^1.0.0-alpha.28",
    "@docsearch/js": "^1.0.0-alpha.28",
    "@nuxt/content": "^1.3.2",
    "@nuxtjs/axios": "^5.11.0",
    "@nuxtjs/pwa": "^3.0.0-beta.20",
    "@tailwindcss/forms": "^0.2.1",
    "deepdash": "^5.3.5",
    "nuxt": "^2.13.0",
    "prism-themes": "^1.4.0",
    "replace-in-file": "^6.2.0",
    "vue-scrollactive": "^0.9.3",
    "yamljs": "^0.3.0"
  },
  "devDependencies": {
    "@cypress/eslint-plugin-dev": "^5.1.0",
    "@fortawesome/free-brands-svg-icons": "^5.14.0",
    "@fortawesome/free-solid-svg-icons": "^5.14.0",
    "@nuxtjs/eslint-config": "^3.0.0",
    "@nuxtjs/fontawesome": "^1.1.2",
    "@nuxtjs/tailwindcss": "^3.4.2",
    "@percy/cypress": "^2.3.4",
    "autoprefixer": "^9",
    "babel-eslint": "^10.1.0",
    "bluebird": "^3.7.2",
    "cross-env": "^7.0.3",
    "cypress": "^6.4.0",
    "eslint": "^7.2.0",
    "eslint-config-prettier": "^8.0.0",
    "eslint-plugin-cypress": "^2.11.2",
    "eslint-plugin-json-format": "^2.0.1",
    "eslint-plugin-nuxt": "^1.0.0",
    "eslint-plugin-prettier": "^3.1.4",
    "eslint-plugin-vue": "^7.6.0",
    "husky": "^5.1.1",
    "lint-staged": "^10.5.4",
    "make-empty-github-commit": "^1.2.1",
    "netlify-cli": "^3.5.0",
    "node-sass": "^4.14.1",
    "postcss": "^7",
    "prettier": "^2.0.5",
    "sass-loader": "^9.0.3",
    "stylelint": "^13.6.1",
    "stylelint-config-prettier": "^8.0.1",
    "stylelint-config-standard": "^20.0.0",
    "tailwindcss": "npm:@tailwindcss/postcss7-compat"
  }
}
